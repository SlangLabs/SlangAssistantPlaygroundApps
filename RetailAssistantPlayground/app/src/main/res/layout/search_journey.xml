<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/search_info"
        android:layout_marginBottom="20dp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Choose the app state and condition to return"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select App State"
            android:gravity="center"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/search_appstates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add To Cart"/>
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Select one of the condition below"/>

    <Button
        android:id="@+id/unsupported"
        android:text="UNSUPPORTED"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/success"
        android:text="SUCCESS"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/failure_generic"
        android:text="FAILURE"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/failure_item_not_found"
        android:text="ITEM NOT FOUND"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/failure_item_out_of_stock"
        android:text="ITEM OUT OF STOCK"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:background="#eeeeee"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/nonvoice_select"
            android:text="Simulate UI select"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/quantity_required"
            android:text="QUANTITY REQUIRED"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/add_to_cart_ambiguous"
        android:text="DISAMBIGUATE"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

</LinearLayout>
